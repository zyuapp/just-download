{
  "name": "just-download",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "start": "npm run -w @just-download/desktop start",
    "dev": "npm run -w @just-download/desktop dev",
    "dev:desktop": "npm run -w @just-download/desktop dev",
    "dev:extension": "npm run -w @just-download/chrome-extension dev",
    "package:mac": "npm run -w @just-download/desktop package:mac",
    "build:desktop": "npm run -w @just-download/desktop build",
    "build:extension": "npm run -w @just-download/chrome-extension build",
    "build": "lage build --allow-no-target-runs",
    "typecheck": "npm run -w @just-download/desktop typecheck && npm run -w @just-download/chrome-extension typecheck",
    "test": "lage test --allow-no-target-runs",
    "test:all": "npm run -w @just-download/desktop test && npm run -w @just-download/chrome-extension test",
    "precommit:verify": "npm run typecheck && npm run test:all",
    "prepare": "node scripts/install-git-hooks.cjs",
    "lint": "eslint . --max-warnings 0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.46.0",
    "@typescript-eslint/parser": "^8.46.0",
    "eslint": "^9.39.0",
    "lage": "^2.14.18",
    "vitest": "^3.2.4"
  }
}
