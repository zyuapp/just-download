{
  "name": "@just-download/desktop",
  "version": "1.0.0",
  "main": "dist/main/main.js",
  "scripts": {
    "clean": "node -e \"require('fs').rmSync('dist', { recursive: true, force: true })\"",
    "copy:assets": "node -e \"const fs=require('fs');fs.mkdirSync('dist/renderer',{recursive:true});fs.copyFileSync('src/renderer/index.html','dist/renderer/index.html');\"",
    "build:css": "tailwindcss -i src/renderer/styles.css -o dist/renderer/styles.css",
    "build": "npm run clean && tsc -p tsconfig.json && npm run copy:assets && npm run build:css",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "start": "npm run dev",
    "dev": "npm run build && electron .",
    "icon:generate": "swift scripts/generate-icons.swift && iconutil -c icns build/icon.iconset -o build/icon.icns",
    "package:mac": "npm run build && npm run icon:generate && CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder --mac dmg --publish never"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "A simple download manager with multipart download and pause/resume",
  "build": {
    "appId": "com.justdownload.app",
    "productName": "Just Download",
    "directories": {
      "output": "release"
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "category": "public.app-category.utilities",
      "icon": "build/icon.icns",
      "extendInfo": {
        "CFBundleURLTypes": [
          {
            "CFBundleURLName": "com.justdownload.app",
            "CFBundleURLSchemes": ["justdownload"]
          }
        ]
      }
    }
  },
  "dependencies": {
    "electron-store": "^11.0.2"
  },
  "devDependencies": {
    "@types/node": "^24.9.0",
    "electron": "40.4.1",
    "electron-builder": "^26.0.12",
    "tailwindcss": "^3.4.19",
    "typescript": "^5.7.3"
  }
}
