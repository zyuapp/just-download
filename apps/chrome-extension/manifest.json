{
  "manifest_version": 3,
  "name": "Just Download Bridge",
  "description": "Intercept Chrome downloads, open Just Download, and prefill a desktop download draft.",
  "version": "0.1.0",
  "permissions": [
    "downloads",
    "storage"
  ],
  "host_permissions": [
    "http://127.0.0.1:17839/*",
    "http://localhost:17839/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "options_page": "options.html",
  "action": {
    "default_title": "Just Download Bridge"
  }
}
